{
	"manifest_version": 2,

	"name": "Parrot",
	"description": "This extension allows real time translation.",
	"version": "1.0",
	"icons": {
		"16": "parrot.png",
		"48": "parrot.png",
		"128": "parrot.png"
	},
	
	"background": {
		"scripts": ["background.js"]
	},
	
	"permissions": [
		"storage"
	],
	
	"browser_action": {
		"default_popup": "options.html",
		"default_icon": "parrot.png"
	},
	
	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"css": ["custom.css", "foreignwordformatting.css"],
			"js": ["jquery.js", "jquery.lettering.js", "jquery.hoverintent.minified.js", "replaceText.js", "indexedDB.js", "parrot.js"]
		}
	],
	
	"web_accessible_resources": [
		"jquery.js"
	]
}
